---
import { css } from "../../styled-system/css";
import { stack } from "../../styled-system/patterns";

const footer = stack({
  justify: "space-between",
  direction: "column",
  color: "text.light",
  bg: "#27272700",
  fontFamily: "dots",
  fontSize: "3xl",
  padding: "10",
  textAlign: "center",
  lg: {
    flexDirection: "row",
  },
});
const inline_block = css({
  display: "inline-block",
});
const underline = css({
  textDecoration: "underline",
});
---

<footer class={footer}>
  <p>
    <span class={inline_block}>(C)opyright 2024 NITO</span>
    <span class={inline_block}>All Rights Reserved.</span>
  </p>
  <span class={inline_block}>
    Source Code on <a href="" class={underline}>GitHub</a>.
  </span>
</footer>
