---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
import { vstack } from "../../styled-system/patterns";
import { css } from "../../styled-system/css";

interface Props {
  image: ImageMetadata;
  name: string;
  href: string;
}
const { image, name, href } = Astro.props;

const work_item = vstack({
  bg: "bg",
  border: "normal",
  borderRadius: "4xl",
  gap: "10",
  paddingInline: "10",
  paddingBlock: "14",
  height: "100%",
  transition: "transform 0.3s {easings.easeOutExpo}",
  _hover: {
    transform: "scale(1.025)",
  },
});
---

<a class={work_item} href={href}>
  <Image
    src={image}
    alt={name}
    class={css({ height: "6rem", objectFit: "contain" })}
  />
  <p
    class={css({
      fontWeight: "bold",
      fontSize: "4xl",
      fontFamily: "mplus",
      textAlign: "center",
    })}
  >
    {name}
  </p>
  <p><slot /></p>
</a>
