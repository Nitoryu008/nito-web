---
import { css, type Styles } from "../../styled-system/css";
import {
  center,
  circle,
  hstack,
  stack,
  vstack,
} from "../../styled-system/patterns";

const links = [
  {
    name: "ABOUT",
    target: "/about",
  },
  {
    name: "BLOG",
    target: "/blog",
  },
  {
    name: "APPS",
    target: "/apps",
  },
  {
    name: "HISTORY",
    target: "/history",
  },
];

const header = css({
  width: "100%",
  pos: "fixed",
  top: "0",
  left: "0",
  paddingLeft: "9",
  paddingRight: "4",
  paddingBlock: "4",
  color: "dark",
  mixBlendMode: "difference",
  lg: {
    paddingInline: "8",
  },
});

const nav = center({
  pos: "fixed",
  top: "0",
  left: "100%",
  width: "100%",
  height: "100dvh",
  fontFamily: "dots",
  fontSize: "6xl",
  bg: "#ffffffbb",
  _peerChecked: {
    left: "0",
  },
  lg: {
    pos: "relative",
    left: "0",
    fontSize: "3xl",
    height: "auto",
    bg: "transparent",
  },
});

const nav_list = stack({
  align: "center",
  justify: "center",
  gap: "14",
  lg: {
    flexDirection: "row",
    gap: "10",
  },
});

const drawer_circle = circle({
  size: "3em",
  bg: "white",
  pos: "relative",
  zIndex: "header",
  boxShadow: "0 0 5px 0 {colors.lightgray}",
  cursor: "pointer",
  fontSize: "3xl",
  lg: {
    display: "none",
  },
});
const line: Styles = {
  content: "''",
  display: "block",
  pos: "absolute",
  height: "0.15em",
  width: "1.45em",
  borderRadius: "20%",
  bg: "dark",
};
const line_gap = "0.5em";
const drawer_lines = vstack({
  justify: "center",
  "& span": {
    ...line,
    _before: { ...line, bottom: line_gap },
    _after: { ...line, top: line_gap },
  },
  _peerChecked: {
    "& span": {
      bg: "transparent",
      _before: { bottom: "0", transform: "rotate(45deg)" },
      _after: { top: "0", transform: "rotate(-45deg)" },
    },
  },
});
---

<header class={header}>
  <div class={hstack({ justify: "space-between" })}>
    <div class={css({ pos: "relative", zIndex: "header" })}>
      <a
        class={css({
          fontFamily: "metro",
          fontSize: "5xl",
        })}
        href="/"
      >
        NITO LAB.
      </a>
    </div>
    <div>
      <input
        id="drawer_input"
        type="checkbox"
        class:list={[css({ display: "none" }), "peer"]}
      />
      <label for="drawer_input" class:list={[drawer_circle, drawer_lines]}>
        <span></span>
      </label>
      <nav class={nav}>
        <ul class={nav_list}>
          {
            links.map(({ name, target }) => (
              <li>
                <a href={target}>{name}</a>
              </li>
            ))
          }
        </ul>
      </nav>
    </div>
  </div>
</header>
