---
import { center, container } from "../../styled-system/patterns";
import Heading from "./Heading.astro";
import MoreButton from "./MoreButton.astro";

interface Props {
  heading: string;
  href: string;
  class: string;
}
const { heading, href, class: className, ...rest } = Astro.props;
const section = container({
  gap: "20",
  display: "flex",
  flexDirection: "column",
  paddingInline: "10",
  paddingBlock: "32",
});
---

<section class:list={[section, className]} {...rest}>
  <Heading>{heading}</Heading>
  <slot />
  <div class={center()}>
    <MoreButton href={href} />
  </div>
</section>
