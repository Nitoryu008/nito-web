---
import { Image } from "astro:assets";
import icon from "../../assets/icon.png";
import { DESCRIPTION } from "../../consts";

import { css } from "../../../styled-system/css";
import { container, circle, vstack } from "../../../styled-system/patterns";
import MoreButton from "../MoreButton.astro";

const cont = container({
  display: "flex",
  flexDirection: "column",
  alignItems: "center",
  paddingInline: "10",
  paddingBlock: "44",
  gap: "20",
});

const about = vstack({
  maxWidth: "50rem",
  borderRadius: "3xl",
  p: "10",
  gap: "8",
  bg: "bg",
  border: "normal",
});
---

<div class={cont}>
  <div class={vstack({ gap: "10" })}>
    <div class={circle({ size: "xs", bg: "bg" })}>
      <Image
        src={icon}
        alt="にとのアイコン"
        class={circle({
          size: "80%",
          boxShadow: "normal",
        })}
      />
    </div>
    <p
      class={css({
        fontFamily: "metro",
        fontSize: "7xl",
        color: "text.light",
      })}
    >
      NITO
    </p>
  </div>
  <div class={about}>
    <p class={css({ fontSize: "4xl" })}>{DESCRIPTION}</p>
    <MoreButton href="/about" />
  </div>
</div>
