---
import { css } from "../../../styled-system/css";
import { container } from "../../../styled-system/patterns";
import Fluid from "../Fluid.astro";
import HistoryItem from "../HistoryItem.astro";
import Section from "./TopSection.astro";

const date = new Date();

const section = container({
  paddingInline: "px.container",
  paddingBlock: "py.section",
  maxWidth: "max.width.container",
  pos: "relative",
  overflowX: "hidden",
  sm: {
    overflowX: "unset",
  },
});
const fluid_container = css({
  pos: "absolute",
  height: "90%",
  width: "120%",
  minWidth: "6xl",
  zIndex: "-1",
  top: "50%",
  left: "50%",
  transform: "translate(-50%, -50%)",
});
---

<Section heading="HISTORY" href="/history" class={section}>
  <ul>
    {
      [...Array(5)].map(() => (
        <li>
          <HistoryItem date={date}>
            WebサイトをリニューアルWebサイトをリニューアル
          </HistoryItem>
        </li>
      ))
    }
  </ul>
  <div class={fluid_container}><Fluid /></div>
</Section>
